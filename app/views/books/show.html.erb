<% if flash[:notice] %>
  <p id="notice">
    <%= flash[:notice] %>
  </p>
<% end %>
<div class="show-form">
  <p><b>Title:</b> <%= @book.title %></p>
  <p><b>Body:</b> <%= @book.body %></p>
</div>
<div class="show-action">
  <%= link_to "Edit", edit_book_path(@book) %>
  <span>|</span>
  <%= link_to "Back", books_path %>
</div>
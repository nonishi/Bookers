<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th class="t-title">Tittle</th>
      <th class="t-body">Body</th>
      <th class="t-action", colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to "Show", book_path(book) %></td>
      <td><%= link_to "Edit", edit_book_path(book) %></td>
      <td><%= link_to "Destroy", book_path(book), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<h2>New book</h2>
<div class="error-box">
  <% if @book.errors.any? %>
    <span class="error-count">
      <%= @book.errors.count %>件のエラーが発生しました
    </span>
    <% @book.errors.full_messages.each do |message| %>
      <ul class="e-message">
        <li><%= message %></li>
      </ul>
    <% end %>
  <% end %>
</div>
<div class="new">
  <%= form_with model:@book, local:true do |f| %>
    <h4>title</h4>
    <div class="text_field"><%= f.text_field :title %></div>
    <h4>body</h4>
    <div class="text-field"><%= f.text_area :body %></div>
    <div class="create"><%= f.submit "Create Book" %></div>
  <% end %>
</div>